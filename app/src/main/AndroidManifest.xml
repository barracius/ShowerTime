            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".BathroomDetailsActivity">
        </activity>
        <activity android:name=".BathroomList">
        </activity>
        <activity android:name=".GroupsBathroom">
        </activity>
        <activity android:name=".CreateBathroom">
        </activity>
        <activity android:name=".GroupDetailsActivity">
        </activity>
        <activity android:name=".MyGroups">
        </activity>
        <activity android:name=".CreateGroup">
        </activity>
        <activity android:name=".JoinGroup">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Login"/>
        <activity android:name=".Signin"/>
        <activity android:name=".LoggedinMenu"/>
    </application>

</manifest>