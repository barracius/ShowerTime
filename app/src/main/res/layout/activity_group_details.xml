<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GroupDetailsActivity">
    <TextView
            android:text="User Group Details"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAlignment="center" android:textSize="24sp" android:textColor="#00BCD4"/>
    <TextView
            android:id="@+id/infoGrupoTextview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/createBathroomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_bathroom"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintVertical_bias="0.253"/>
    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="28dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createBathroomButton"
            android:text="@string/bathrooms"
            android:id="@+id/seeGroupsBathroomButton"
            android:layout_width="162dp"
            android:layout_height="49dp"
            app:layout_constraintStart_toStartOf="@+id/createBathroomButton"
            app:layout_constraintEnd_toEndOf="@+id/createBathroomButton" app:layout_constraintHorizontal_bias="0.461"/>

</android.support.constraint.ConstraintLayout>