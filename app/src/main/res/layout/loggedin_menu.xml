<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="362dp"
            android:layout_height="47dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.058" android:textAlignment="center" android:textStyle="bold"
            android:textSize="24sp"/>
    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/createGroupButton"
            android:layout_width="0dp"
            android:layout_height="69dp"
            android:text="Create User Group"
            app:layout_constraintTop_toBottomOf="@+id/myGroupsButton"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="@+id/myGroupsButton"
            app:layout_constraintEnd_toEndOf="@+id/myGroupsButton" app:layout_constraintHorizontal_bias="1.0"/>
    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/joinGroupButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@+id/createGroupButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Join User Group" android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="@+id/createGroupButton"
            app:layout_constraintEnd_toEndOf="@+id/createGroupButton"/>
    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/myGroupsButton"
            android:layout_width="213dp"
            android:layout_height="57dp"
            android:text="My User Groups"
            app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
            android:layout_marginTop="20dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rain"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/joinGroupButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.666"/>

</android.support.constraint.ConstraintLayout>